rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2023, 2, 10);
    }
    match /{path=**}/reviews {
      allow write : if 
        request.resource.data.keys().hasAll(['upvotes','downvotes','title','review','rating'])
    }
  }
}
